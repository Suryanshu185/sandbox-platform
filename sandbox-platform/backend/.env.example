# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sandbox_platform

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Secrets Encryption Key (generate with: openssl rand -base64 32)
# This MUST be 32 bytes base64 encoded
SECRETS_MASTER_KEY=your-32-byte-base64-encoded-key-here

# Docker
DOCKER_SOCKET=/var/run/docker.sock

# Server
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:5173
